# Usar imagem base PHP 8.3 com FPM
FROM php:8.2-fpm

# Instala depend√™ncias do sistema (compat√≠veis com Debian Trixie)
RUN apt-get update && apt-get install -y \
    libzip-dev \
    unzip \
    libicu-dev \
    git \
    curl \
    libfreetype6-dev \
    libjpeg-dev \
    libpng-dev \
    && docker-php-ext-install pdo_mysql zip intl opcache

# Configurar e instalar o GD com JPEG/PNG/Freetype
RUN docker-php-ext-configure gd \
    --with-freetype \
    --with-jpeg \
    && docker-php-ext-install -j$(nproc) gd


# üß∞ Instala o Composer globalmente
RUN curl -sS https://getcomposer.org/installer | php && \
    mv composer.phar /usr/local/bin/composer && \
    chmod +x /usr/local/bin/composer

# Instala o Xdebug via PECL
RUN pecl install xdebug \
    && docker-php-ext-enable xdebug

# Copia a configura√ß√£o personalizada do Xdebug
COPY docker/xdebug.ini /usr/local/etc/php/conf.d/xdebug.ini

# Define o diret√≥rio de trabalho
WORKDIR /var/www/html

# Copia os arquivos do projeto
COPY . /var/www/html

# Instala depend√™ncias PHP via Composer
RUN composer install --no-interaction --prefer-dist --optimize-autoloader

# Configura permiss√µes
RUN chown -R www-data:www-data /var/www/html

# Exponha a porta correta (FPM usa 9000, n√£o 80)
EXPOSE 9000

# Comando padr√£o (o PHP-FPM √© iniciado automaticamente)
CMD ["php-fpm"]